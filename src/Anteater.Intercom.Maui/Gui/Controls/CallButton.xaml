<FlexLayout
    x:Class="Anteater.Intercom.Gui.Controls.CallButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="_self">
    <ImageButton
        Style="{StaticResource ImageButton}"
        Source="callstart.png"
        Aspect="AspectFit"
        x:Name="_button">
        <ImageButton.Triggers>
            <DataTrigger TargetType="ImageButton" Binding="{Binding Source={x:Reference _self}, Path=IsCallStarted}" Value="True">
                <Setter Property="Source" Value="callend.png" />
            </DataTrigger>
            <DataTrigger TargetType="ImageButton" Binding="{Binding Source={x:Reference _self}, Path=IsCallStarted}" Value="False">
                <Setter Property="Source" Value="callstart.png" />
            </DataTrigger>
        </ImageButton.Triggers>
    </ImageButton>
</FlexLayout>
