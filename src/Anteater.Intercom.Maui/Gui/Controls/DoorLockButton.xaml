<FlexLayout
    x:Class="Anteater.Intercom.Gui.Controls.DoorLockButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="_self">
    <ImageButton
        Style="{StaticResource ImageButton}"
        Source="doorlock.png"
        Aspect="AspectFit"
        IsEnabled="{Binding Source={x:Reference _self}, Path=IsDoorLocked}"
        Pressed="OnPressed">
        <ImageButton.Triggers>
            <DataTrigger TargetType="ImageButton" Binding="{Binding Source={x:Reference _self}, Path=IsDoorLocked}" Value="True">
                <Setter Property="Source" Value="doorlock.png" />
            </DataTrigger>
            <DataTrigger TargetType="ImageButton" Binding="{Binding Source={x:Reference _self}, Path=IsDoorLocked}" Value="False">
                <Setter Property="Source" Value="doorunlock.png" />
            </DataTrigger>
        </ImageButton.Triggers>
    </ImageButton>
</FlexLayout>
