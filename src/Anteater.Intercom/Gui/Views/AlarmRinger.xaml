<UserControl x:Class="Anteater.Intercom.Gui.Views.AlarmRinger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodel="clr-namespace:Anteater.Intercom.Gui.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodel:AlarmRingerViewModel}"
             d:DesignHeight="200" d:DesignWidth="200"             
             Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibility}}">
    <Image Source="pack://application:,,,/Assets/BellRingOn.png" />
</UserControl>
